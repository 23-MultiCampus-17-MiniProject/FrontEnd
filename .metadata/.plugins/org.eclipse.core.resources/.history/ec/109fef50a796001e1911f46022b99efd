		if("${login_user_id}" == ""){
			let res = confirm("한줄평은 로그인 후 등록가능합니다. 로그인하시겠습니까?");
			if(res == true){
				location.href = "http://localhost:9080/multicinema/login";
			}
		}else{
			e.submit();
		}
	});
});
